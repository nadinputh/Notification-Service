{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@requests/*": ["src/application/request/*"],
      "@services/*": ["src/domain/service/*"],
      "@dtos/*": ["src/dto/*"],
      "@application/*": ["src/application/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@domain/*": ["src/domain/*"],
      "@adapters/*": ["src/domain/adapter/*"],
      "@entities/*": ["src/infrastructure/io/entity/*"],
      "@utility/*": ["src/utility/*"],
      "@auth/*": ["src/auth-module/*"],
      "@notifier": ["libs/notifier/src"],
      "@notifier/*": ["libs/notifier/src/*"],
      "@mailer": ["libs/mailer/src"],
      "@mailer/*": ["libs/mailer/src/*"]
    },
    "incremental": true
  }
}
